# ============================================
# RAG para Presupuestos de Obra - Configuración
# ============================================

# Base de datos PostgreSQL
# Nota: La extensión pgvector debe estar instalada en PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_presupuestos

# URL sincrónica (para Alembic migrations)
DATABASE_URL_SYNC=postgresql+psycopg2://postgres:postgres@localhost:5432/rag_presupuestos

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384
DEVICE=cpu  # cpu o cuda

# API
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=RAG para Presupuestos de Obra
API_VERSION=1.0.0
API_DESCRIPTION=Sistema RAG para crear presupuestos de obra con base de conocimiento

# Upload de archivos
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,txt,csv,docx,xlsx
UPLOAD_DIR=./uploads

# Procesamiento de texto
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
